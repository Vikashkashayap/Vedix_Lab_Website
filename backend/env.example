# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Email Configuration (Optional - for contact form emails)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Database Configuration
DATABASE_URL=mongodb+srv://username:password@cluster0.m4mp4qp.mongodb.net/?appName=Cluster0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRE=7d

# Default Admin (optional - only used on first server start)
# DEFAULT_ADMIN_EMAIL=admin@gmail.com
# DEFAULT_ADMIN_PASSWORD=your-secure-password-here

# OpenRouter API Configuration (for AI Chatbot)
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_MODEL=google/gemini-2.0-flash-exp:free
# AI Request Timeout in milliseconds (default: 80000 = 80 seconds)
# Increase if using slower AI models, decrease for faster models
AI_REQUEST_TIMEOUT=80000
